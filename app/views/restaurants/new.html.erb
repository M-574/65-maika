<h1>(料理店吉田)</h1>
<h3>新規メニュー</h3>
<%= form_for @restaurant do |f| %>

# データ型がstringで自由記述の入力フォーム
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 30 %>
  </div>
  
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  


# データ型がintegerで数字のみを入力するフォーム
  <div class="field">
    <%= f.label :price  %>
    <%= f.number_field :price, :size => 10 %>
  </div>

# データ型がtextで自由記述の入力フォーム
  <div class="field">
    <%= f.label :detail  %>
    <%= f.text_area :detail, :size => "30x2" %>
  </div>
  
  <div class='form-group'>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class='form-check'>
        <%= tag.label class: 'form-check-label' do %>
         <%= tag.check_box class: 'form-check-input' %>
         <%= tag.text %>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= f.submit "メニューを公開する" %>
<% end %>

<%= link_to "メニュー一覧に戻る", restaurants_path %>